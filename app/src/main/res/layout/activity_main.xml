<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="40dp"
                android:layout_marginBottom="18dp"
                android:fontFamily="@font/sfprodisplay_bold"
                android:gravity="center"
                android:text="Гороскоп"
                android:textColor="#3D3D3D"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="20dp"
                android:gravity="center"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:gravity="center_horizontal|center_vertical"
                    android:text="Сегодня"
                    android:textColor="#FFFFFF"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button2"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Завтра"
                    android:textColor="#1572DB"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button9"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Неделя"
                    android:textColor="#1572DB"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button10"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Месяц"
                    android:textColor="#1572DB"
                    android:textSize="14sp" />

            </LinearLayout>

            <TextView
                android:id="@+id/tvToday"
                android:layout_width="fill_parent"
                android:layout_height="335dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
                android:fontFamily="@font/sfprodisplay_regular"
                android:text="error text"
                android:textColor="#000427"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#f5f5f5"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/textUsefulInfo"
                    android:layout_width="150dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Была ли полезна эта информация?"
                    android:textColor="#000427"
                    android:textSize="14sp" />

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/thumb_up" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="1dp"
                    android:layout_height="30dp"
                    android:layout_marginRight="20dp"
                    android:layout_weight="1"
                    app:srcCompat="@drawable/thumb_down" />

            </LinearLayout>

            <TextView
                android:id="@+id/textView7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="10dp"
                android:fontFamily="@font/sfprodisplay_bold"
                android:gravity="center"
                android:text="Вам также может быть интересно"
                android:textColor="#000427"
                android:textSize="14sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="38dp"
                android:layout_marginBottom="30dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/button12"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_marginLeft="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/button"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Сегодня"
                    android:textColor="#FFFFFF" />

                <Button
                    android:id="@+id/button16"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Завтра"
                    android:textColor="#1572DB"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button17"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Неделя"
                    android:textColor="#1572DB"
                    android:textSize="14sp" />

                <Button
                    android:id="@+id/button18"
                    style="@android:style/Widget.Button"
                    android:layout_width="103dp"
                    android:layout_height="34dp"
                    android:layout_weight="1"
                    android:background="#00FFFFFF"
                    android:fontFamily="@font/sfprodisplay_regular"
                    android:text="Месяц"
                    android:textColor="#1572DB"
                    android:textSize="14sp" />

            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>